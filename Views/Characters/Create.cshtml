@using sa_it2030_fa24_fp_team_3_it2030_fa24.Models
@model sa_it2030_fa24_fp_team_3_it2030_fa24.Models.Character
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<body>
    <h1>Create New Character</h1>

    <!-- Display any validation errors -->
    <div asp-validation-summary="All" class="validation-summary-valid text-danger"></div>

    <form asp-action="CreateNew" method="post">
        <div>
            <label for="Name">Name</label>
            <input type="text" id="Name" name="Name" value="@Model.name" required />
            <span asp-validation-for="name" class="text-danger"></span> <!-- Validation error message for Name -->
        </div>
        <div>
            <label for="About">About</label>
            <textarea id="About" name="About" required>@Model.about</textarea>
            <span asp-validation-for="about" class="text-danger"></span> <!-- Validation error message for About -->
        </div>
        <div>
            <label for="Powers">Powers</label>
            <textarea id="Powers" name="Powers" required>@Model.powers</textarea>
            <span asp-validation-for="powers" class="text-danger"></span> <!-- Validation error message for Powers -->
        </div>

        <button type="submit">Create Character</button>
    </form>

    <!-- Enable client-side validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @await Component.InvokeAsync("SideBar")
</body>
</html>
