@using sa_it2030_fa24_fp_team_3_it2030_fa24.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Message>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    .MessageContainer{
        background-color: lightsteelblue;
    }
</style>
<div class="MessageContainer">
<form asp-controller=@ViewBag.RelevantController asp-action="Message" method="post">
    <label class="MessageLabel"> Nickname </label>
    <input type="text" name="Nickname" value="" />
    <label class= "MessageLabel"> Message Body </label>
    <textarea type="text" name="Body" value=""> </textarea>
    <input type="hidden" name="Page" value=@ViewBag.Page />
    <input type="submit" />
</form>
<table>
    @foreach (Message M in Model)
    {
        <tr>
           <td class="MessageFrom">From: @(M.Nickname)</td> <td>Sent at : @(M.SentTime.ToLocalTime())</td>
        </tr>
        <tr>
            <td class="MessageBody"> @(M.Body)</td>
        </tr>
    }
</table>
</div>